{
  "name": "medirect-tests",
  "version": "1.0.0",
  "description": "Playwright tests for MeDirect equities search",
  "main": "index.js",
  "scripts": {
    "test": "playwright test --reporter=list,html,json,allure-playwright",
    "test:headed": "playwright test --headed --reporter=list,html,json,allure-playwright",
    "capture:state": "ts-node scripts/capture-storage-state.ts",
    "report:open": "playwright show-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "ci": "npm run test && npm run allure:generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "playwright": "^1.56.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
